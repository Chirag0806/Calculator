<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="2pt"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/Gray"
        android:layout_weight="1"
        android:textSize="30pt"
        android:gravity="right|center"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <Button
            android:id="@+id/buAC"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="2pt"
            android:text="AC"
            android:textSize="20dp"
            android:onClick="acEvent"
            android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="+/-"
                android:textSize="20dp"
                android:onClick="numberPlusMinus"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/buModulus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="%"
                android:textSize="20dp"
                android:onClick="operatorEvent"
                android:backgroundTint="@color/blueback" />

            <ImageButton
                android:id="@+id/buBack"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:src="@drawable/ic_arrow_back"
                android:textSize="20dp"
                android:onClick="back"
                android:backgroundTint="@color/LDblue" />

        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu7"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="7"
                android:textSize="20dp"
                android:onClick="numberEvent"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/bu8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="8"
                android:textSize="20dp"
                android:onClick="numberEvent"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/bu9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="9"
                android:textSize="20dp"
                android:onClick="numberEvent"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/buDivide"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="/"
                android:textSize="20dp"
                android:onClick="operatorEvent"
                android:backgroundTint="@color/LDblue" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu4"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="4"
                android:textSize="20dp"
                android:onClick="numberEvent"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/bu5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="5"
                android:textSize="20dp"
                android:onClick="numberEvent"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/bu6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="6"
                android:textSize="20dp"
                android:onClick="numberEvent"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/buMultiply"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="*"
                android:textSize="20dp"
                android:onClick="operatorEvent"
                android:backgroundTint="@color/LDblue" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu1"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="1"
                android:textSize="20dp"
                android:onClick="numberEvent"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/bu2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="2"
                android:textSize="20dp"
                android:onClick="numberEvent"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/bu3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="3"
                android:textSize="20dp"
                android:onClick="numberEvent"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/buMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="-"
                android:textSize="20dp"
                android:onClick="operatorEvent"
                android:backgroundTint="@color/LDblue" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu0"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="0"
                android:textSize="20dp"
                android:onClick="numberEvent"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/buPoint"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="."
                android:textSize="20dp"
                android:onClick="dot"
                android:backgroundTint="@color/blueback" />

            <Button
                android:id="@+id/buEquals"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:text="="
                android:onClick="equalEvent"
                android:textSize="20dp"
                android:backgroundTint="@color/orange" />

            <Button
                android:id="@+id/buPlus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+"
                android:textSize="20dp"
                android:onClick="operatorEvent"
                android:backgroundTint="@color/LDblue" />
        </TableRow>
    </TableLayout>

</LinearLayout>